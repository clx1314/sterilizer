.devices{
    padding: 0 30rpx;
}
.device{
    width: 100%;
    height: 200rpx;
    background: #fff;
    box-shadow: 4rpx 6rpx 10rpx #ddd;
    border-radius: 18rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    margin-top: 20px;
}
.left_img{
    width: 146rpx;
    height: 170rpx;
}
.flex-seat{
    display: flex;
    justify-content: space-between;
}
.right{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 28rpx;
}
.startBtn{
    width: 60rpx;
    height: 60rpx;
    background: #409EFF;
    border-radius: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 6rpx solid #ACEAF1;
}
.iconStatus{
    align-items: center;
    width: 110rpx;
}
.addNew{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #409EFF;
    border: 1px dashed #666;
    box-shadow: none;
    background: #ebebeb;
}